/* Clipboard Config - Clipboard */
/* --- Workspaces configuration by Xuan Truong --- */

@import "~/.config/rofi/config.rasi"  

/* ---- Window ---- */
window {
  width: 50%;
  height: 60%;
}

/* ---- Mainbox ---- */
mainbox {
  children:
    [ "inputbar", "message", "listview"];
}

/* ---- Entry ---- */
entry {
  width: inherit;
  placeholder: " ðŸ“‹ Search  Clipboard ";
}

/* ---- Listview ---- */
listview {
  columns: 1;
  lines: 8;
  fixed-height: false;
  spacing: 6px;
  cycle: true;
}

/* ---- Elements ---- */
element {
  orientation: horizontal;
  spacing: 10px;
}

element-icon {
  size: 2em;
}

element-text {
  horizontal-align: 0.0;
  vertical-align: 0.5;
  margin: 0px;
  padding: 0px;
}
